<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/image_icon"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        android:src="@drawable/prod1"
        android:layout_alignBottom="@+id/text_info" />


    <TextView
        android:id="@+id/text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="status"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/text_info"
         />


    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_weight="0.25"
        android:textColor="#0099e5"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:layout_below="@+id/text_status"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/image_icon" />




    <TextView
        android:id="@+id/text_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:textColor="#0099e5"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Info"
        android:layout_alignEnd="@+id/text_title"
        android:layout_toEndOf="@+id/image_icon"
        android:layout_below="@+id/text_title" />

















</RelativeLayout>
